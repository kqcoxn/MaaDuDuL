{
	"interface_version": 2,
	"name": "MaaDuDuL",
	"title": "MDDL 嘟嘟脸小助手(kqcoxn/MaaDuDuL) v0.0.1 - MFAA | 测试阶段",
	// "icon": "icon.png",
	"description": "嘟嘟脸小助手",
	"version": "v0.0.1",
	"welcome": "欢迎使用 MDDL!",
	"contact": "QQ群: 926874985",
	"license": "AGPL-3.0",
	"github": "https://github.com/kqcoxn/MaaDuDuL",
	// "mirrorchyan_rid": "MaaDuDuL",
	// "mirrorchyan_multiplatform": true,
	"controller": [
		{
			"name": "模拟器",
			"type": "Adb",
			"display_short_side": 720
		}
	],
	"resource": [
		{
			"name": "B服",
			"path": ["{PROJECT_DIR}/resource/base"]
		}
	],
	"agent": {
		"child_exec": "python",
		"child_args": ["-u", "{PROJECT_DIR}/agent/main.py"]
	},
	"task": [
		{
			"name": "说明",
			"label": "说明",
			"entry": "连续作战_开始",
			"description": ""
		},
		{
			"name": "操作指南",
			"label": "操作指南",
			"entry": "连续作战_开始",
			"description": ""
		},
		{
			"name": "启动游戏",
			"label": "启动游戏",
			"entry": "启动游戏_开始",
			"default_check": true,
			"description": ""
		},
		{
			"name": " ——— 日常任务 ———",
			"label": "——— 日常任务 ———",
			"entry": "日常分隔符",
			"description": ""
		},
		{
			"name": "领取邮件",
			"label": "领取邮件",
			"entry": "领取邮件_开始",
			"default_check": true,
			"description": "",
			"option": ["领取邮件-周期检查"]
		},
		{
			"name": "领取糖果",
			"label": "领取每日糖果",
			"entry": "领取糖果_开始",
			"default_check": true,
			"description": ""
			// "option": ["领取邮件-周期检查"]
		},
		{
			"name": "每日采购",
			"label": "每日采购",
			"entry": "每日采购_开始",
			"default_check": true,
			"description": "",
			"option": ["每日采购-周期检查", "每日采购-每日免费礼包", "每日采购-商店采购"]
		},
		{
			"name": " ——— 活动任务 ———",
			"label": "——— 活动任务 ———",
			"entry": "活动分隔符",
			"description": ""
		},
		{
			"name": " ——— 单次任务 ———",
			"label": "——— 单次任务 ———",
			"entry": "单次任务分隔符",
			"description": ""
		},
		{
			"name": " ——— 开荒功能 ———",
			"label": "——— 开荒功能 ———",
			"entry": "开荒功能分隔符",
			"description": ""
		},
		{
			"name": "连续作战",
			"label": "连续作战",
			"entry": "连续作战_开始",
			"description": ""
		},
		{
			"name": " ——— 新增任务 ———",
			"label": "——— 新增任务 ———",
			"entry": "新增任务分隔符",
			"description": ""
		}
	],
	"option": {
		"领取邮件-周期检查": {
			"type": "switch",
			"label": "每日仅检查一次邮箱",
			"description": "",
			"cases": [
				{
					"name": "No",
					"pipeline_override": {
						"领取邮件_周期检查": {
							"recognition": "DirectHit"
						}
					}
				},
				{
					"name": "Yes"
				}
			]
		},
		"每日采购-周期检查": {
			"type": "switch",
			"label": "每日仅检查一次采购",
			"description": "",
			"cases": [
				{
					"name": "No",
					"pipeline_override": {
						"每日采购_周期检查": {
							"recognition": "DirectHit"
						}
					}
				},
				{
					"name": "Yes"
				}
			]
		},
		"每日采购-每日免费礼包": {
			"type": "switch",
			"label": "采购每日免费礼包",
			"description": "",
			"cases": [
				{
					"name": "Yes"
				},
				{
					"name": "No",
					"pipeline_override": {
						"每日采购_每日免费礼包开始": {
							"next": "每日采购_每日免费礼包结束"
						}
					}
				}
			]
		},
		"每日采购-商店采购": {
			"type": "switch",
			"label": "采购普通商店",
			"description": "",
			"cases": [
				{
					"name": "No",
					"pipeline_override": {
						"每日采购_普通商店开始": {
							"next": "每日采购_普通商店结束"
						}
					}
				},
				{
					"name": "Yes",
					"option": ["每日采购-日常商店"]
				}
			]
		},
		"每日采购-日常商店": {
			"type": "switch",
			"label": "日常商店",
			"description": "",
			"cases": [
				{
					"name": "No",
					"pipeline_override": {
						"每日采购_日常商店开始": {
							"next": "每日采购_日常商店结束"
						}
					}
				},
				{
					"name": "Yes",
					"option": ["每日采购-日常商店-朱珠糖", "每日采购-日常商店-星星糖", "每日采购-日常商店-锻造书"]
				}
			]
		},
		"每日采购-日常商店-朱珠糖": {
			"type": "switch",
			"label": "朱珠糖",
			"description": "",
			"cases": [
				{
					"name": "No",
					"pipeline_override": {
						"每日采购_购买日常朱珠糖": {
							"action": "DoNothing"
						}
					}
				},
				{
					"name": "Yes"
				}
			]
		},
		"每日采购-日常商店-星星糖": {
			"type": "switch",
			"label": "星星糖",
			"description": "",
			"cases": [
				{
					"name": "No",
					"pipeline_override": {
						"每日采购_购买日常星星糖": {
							"action": "DoNothing"
						}
					}
				},
				{
					"name": "Yes"
				}
			]
		},
		"每日采购-日常商店-锻造书": {
			"type": "switch",
			"label": "锻造书",
			"description": "",
			"cases": [
				{
					"name": "No",
					"pipeline_override": {
						"每日采购_购买日常锻造书": {
							"action": "DoNothing"
						}
					}
				},
				{
					"name": "Yes"
				}
			]
		}
	}
}
